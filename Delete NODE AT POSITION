#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

struct Node* head = NULL;

void insertEnd(int value) {
    struct Node* newNode = malloc(sizeof(struct Node));
    newNode->data = value;
    newNode->next = NULL;

    if (head == NULL) {
        head = newNode;
        return;
    }

    struct Node* temp = head;
    while (temp->next != NULL) temp = temp->next;
    temp->next = newNode;
}

// ✅ Delete node at given position
void deletePosition(int pos) {
    if (head == NULL) {
        printf("List is empty!\n");
        return;
    }

    // ✅ If deleting first node
    if (pos == 1) {
        struct Node* temp = head;
        head = head->next;
        free(temp);
        printf("Node at position 1 deleted.\n");
        return;
    }

    struct Node* temp = head;
    int i;

    // Move temp to node BEFORE the deleting node
    for (i = 1; i < pos - 1; i++) {
        if (temp->next == NULL) {   // position out of range
            printf("Invalid position!\n");
            return;
        }
        temp = temp->next;
    }

    // temp points to previous node
    struct Node* deleteNode = temp->next;

    if (deleteNode == NULL) {
        printf("Invalid position!\n");
        return;
    }

    temp->next = deleteNode->next;
    free(deleteNode);

    printf("Node at position %d deleted.\n", pos);
}

void display() {
    struct Node* temp = head;
    if (!temp) {
        printf("List is empty.\n");
        return;
    }
    while (temp) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

int main() {

    insertEnd(10);
    insertEnd(20);
    insertEnd(30);
    insertEnd(40);

    printf("Before deletion:\n");
    display();

    deletePosition(3);

    printf("After deletion:\n");
    display();

    return 0;
}
