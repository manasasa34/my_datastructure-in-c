#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i;
    int *ptr;

    printf("Enter the size of array: ");
    scanf("%d", &n);

    ptr = (int*)malloc(n * sizeof(int));

    if (ptr == NULL) {
        printf("Memory not allocated!\n");
        return 1;
    }

    printf("Enter %d integers:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", (ptr + i));   // pointer arithmetic
    }

    int sum = 0;
    int max = *ptr;   // first element

    for (i = 0; i < n; i++) {
        sum += *(ptr + i);

        if (*(ptr + i) > max)
            max = *(ptr + i);
    }

    printf("\nSum = %d\n", sum);
    printf("Maximum = %d\n",max);
    free(ptr);

    return 0;
}
