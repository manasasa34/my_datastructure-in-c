/**
 * Note: The returned array must be malloced, assume caller calls free().
 */
int** transpose(int** matrix, int matrixSize, int* matrixColSize, 
                int* returnSize, int** returnColumnSizes) {
    
    int r = matrixSize;          // number of rows
    int c = matrixColSize[0];    // number of columns

    // Transposed matrix will be c x r
    *returnSize = c;
    *returnColumnSizes = (int*)malloc(c * sizeof(int));

    int **result = (int**)malloc(c * sizeof(int*));

    for (int i = 0; i < c; i++) {
        (*returnColumnSizes)[i] = r;      // each row in result has r columns
        result[i] = (int*)malloc(r * sizeof(int));
    }

    // Fill transpose
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {
            result[j][i] = matrix[i][j];
        }
    }

    return result;
}
