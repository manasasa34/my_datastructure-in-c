#include<stdio.h>
void display(int *pt,int *x)
{
    printf("the passed array elements are:\n");
    for(int i=0;i< *x;i++)
    {
        printf("%d ",*(pt+i));
    }
}
int main()
{
    int n;
    printf("enter the size of array\n");
    scanf("%d",&n);
   int arr[n];
    printf("enter array elements\n");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
        
    }
    display(arr,&n);
}
