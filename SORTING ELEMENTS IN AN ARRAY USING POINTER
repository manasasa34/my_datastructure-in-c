#include<stdio.h>

int main()
{
    int i,j,temp;
    int n,*ptr;
    printf("enter the size of array:");
    scanf("%d",&n);
    int arr[n];
   *ptr=arr[n];
    printf("enter array elements\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",ptr+i);
    }
    printf("the elements in SORTED manner:");
    for(i=0;i<n-1;i++)
    {
        for(j=i+1;j<n;j++)
        {
            if(*(ptr+i)>*(ptr+j))
            {
            temp=*(ptr+i);
            *(ptr+i)=*(ptr+j);
            *(ptr+j)=temp;
            }
            
        }
    }
    for(i=0;i<n;i++)
    {
        printf("%d\n",*(ptr+i));
    }
    return 0;
}
