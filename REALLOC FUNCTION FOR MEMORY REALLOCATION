
#include<stdio.h>
#include<stdlib.h>
int main() {
    int n, newSize;

    printf("Enter initial size: ");
    scanf("%d", &n);

    // Allocate memory using malloc
    int *arr = (int*)malloc(n * sizeof(int));

    printf("Enter %d elements:\n", n);
    for(int i = 0; i < n; i++)
       {
		 scanf("%d", &arr[i]);
}
    printf("Enter new size: ");
    scanf("%d", &newSize);

    // Increase or decrease memory using realloc
    arr = (int*)realloc(arr, newSize * sizeof(int));

    // If new size is bigger, take input for new elements
    if(newSize > n) {
        printf("Enter %d new elements:\n", newSize - n);
        for(int i = n; i < newSize; i++)
            scanf("%d", &arr[i]);
    }

    // Print final array
    printf("Final array: ");
    for(int i = 0; i < newSize; i++)
        printf("%d ", arr[i]);

    free(arr);
    return 0;
}



